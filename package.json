{
  "name": "cronohub",
  "version": "1.0.0",
  "description": "Professional time tracking system for GitHub issues",
  "author": "Gopenux AI - Gopenux Lab",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "test:e2e": "jest tests/e2e",
    "test:unit": "jest tests/unit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "xvfb-run --auto-servernum --server-args=\"-screen 0 1280x720x24\" npm run test:e2e",
    "lint": "eslint .",
    "validate:manifest": "jest tests/unit/manifest.test.js",
    "check:ci": "bash tests/scripts/check-ci-environment.sh"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/jest": "^29.5.14",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "puppeteer": "^24.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "content.js",
      "popup.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ]
  }
}
